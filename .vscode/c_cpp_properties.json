{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/include",         // for Renderer.hpp, etc.
                "${workspaceFolder}/src",             // for source files, optional
                "/opt/homebrew/include",              // for GLM and other Homebrew libs
                "${workspaceFolder}/**"               // fallback for everything else
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64"
        }
    ],
    "version": 4
}
